<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rltLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/blanco">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:visibility="gone"
                app:srcCompat="@drawable/yo" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="20dp"
                >
                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:tint="@color/negro"
                    app:srcCompat="@drawable/nombre"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txtNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Mente Sicaria"
                android:layout_below="@+id/img"
                android:layout_toRightOf="@id/profile"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:maxLength="74"
                android:fontFamily="@font/roboto_light"
                android:text="gracia papá dio otro día sin ser neybero"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNom"
                android:layout_toRightOf="@id/profile"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_light"
                android:text="07/02/2020"
                android:layout_marginBottom="6dp"
                android:textColor="#878787"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/estar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/fire_activo"
                android:layout_below="@id/txtCaption"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3dp"/>

            <TextView
                android:id="@+id/txtLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCaption"
                android:layout_toRightOf="@id/estar"
                android:layout_marginTop="4dp"
                android:inputType="number"
                android:text="00"
                android:textStyle="bold"
                android:textColor="@color/rose"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/comentar"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@+id/txtCaption"
                android:layout_toLeftOf="@id/like"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                app:srcCompat="@drawable/comentario"/>

            <ImageView
                android:id="@+id/like"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/txtCaption"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                app:srcCompat="@drawable/fire"/>

            <TextView
                android:id="@+id/idPost"
                android:layout_width="wrap_content"
                android:textSize="1sp"
                android:textColor="@color/blanco"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/idUsuario"
                android:layout_width="wrap_content"
                android:textSize="1sp"
                android:textColor="@color/blanco"
                android:layout_height="wrap_content">

            </TextView>


        </RelativeLayout>
            <LinearLayout
                android:id="@+id/line"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:orientation="vertical"
                android:background="#E6E6E6"
                />
</LinearLayout>