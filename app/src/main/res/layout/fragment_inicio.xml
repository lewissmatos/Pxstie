<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_panel_post"
            android:backgroundTint="@color/rose"
            >
            <ImageView
                android:id="@+id/btnCuenta"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/cuentanew" />
            <ImageView
                android:id="@+id/btnMensajes"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/mensajes" />
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Pxstie"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/light_texts_color"
                android:textSize="26sp" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#fff"
            android:padding="6dp">

            <EditText
                android:id="@+id/edPost"
                android:layout_width="260dp"
                android:layout_height="34dp"
                android:inputType="text"
                android:padding="6dp"
                android:layout_alignParentLeft="true"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_marginStart="6dp"
                android:textColor="#000"
                android:maxLength="90"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:background="@drawable/curves"
                >
            </EditText>
            <ImageView
                android:id="@+id/btnAddPic"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/add_photo">
            </ImageView>
            <ImageView
                android:id="@+id/btnAddPost"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toLeftOf="@id/btnAddPic"
                app:srcCompat="@drawable/addpost">
            </ImageView>
            <ImageView
                android:id="@+id/btnPostear"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="2dp"
                android:layout_toLeftOf="@id/btnAddPost"
                app:srcCompat="@drawable/postear">

            </ImageView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_smoke">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</FrameLayout>