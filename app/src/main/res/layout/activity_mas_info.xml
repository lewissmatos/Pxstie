<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blanco"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_smoke"
                >

                <ImageView
                    android:id="@+id/btnVolver"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:tint="@color/negro"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/anterior" />
                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Más información"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@color/negro"
                    android:textSize="26sp" />

            </RelativeLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:backgroundTint="@color/white_smoke"
            android:background="@drawable/bg_curverightsuperior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardElevation="3dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="30dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <TextView
                            android:id="@+id/encabezado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Datos personales"
                            android:textStyle="bold"
                            android:textColor="@color/gris_tabla"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/txtNom"
                            android:layout_width="260dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:inputType="text"
                            android:background="@drawable/curves"
                            android:text="-"
                            android:textStyle="bold"
                            android:paddingEnd="30dp"
                            android:drawableLeft="@drawable/nom_completo"
                            android:padding="8dp"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtUser"
                            android:layout_width="260dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:inputType="text"
                            android:background="@drawable/curves"
                            android:text="-"
                            android:padding="8dp"
                            android:maxLength="24"
                            android:paddingEnd="30dp"
                            android:drawableLeft="@drawable/usuarioicon"
                            android:layout_marginTop="18dp"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="18dp"
                            >
                            <TextView
                            android:id="@+id/txtFecha"
                            android:layout_width="140dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:inputType="text"
                            android:background="@drawable/curves"
                            android:text="-"
                            android:padding="8dp"
                            android:maxLength="24"
                            android:paddingEnd="10dp"
                            android:drawableLeft="@drawable/cumple"
                            android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtGenero"
                                android:layout_width="140dp"
                                android:layout_height="44dp"
                                android:gravity="center"
                                android:inputType="text"
                                android:background="@drawable/curves"
                                android:text="-"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:maxLength="24"
                                android:layout_marginStart="20dp"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="30dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ambiente social"
                            android:textStyle="bold"
                            android:textColor="@color/gris_tabla"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/edInstragram"
                            android:layout_width="260dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:background="@drawable/curves"
                            android:hint="Instagram"
                            android:paddingEnd="30dp"
                            android:drawableLeft="@drawable/ig1"
                            android:padding="8dp"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edFacebook"
                            android:layout_width="260dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:background="@drawable/curves"
                            android:hint="Facebook"
                            android:padding="8dp"
                            android:paddingEnd="30dp"
                            android:drawableLeft="@drawable/fb2"
                            android:layout_marginTop="18dp"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edTwitter"
                            android:layout_width="260dp"
                            android:layout_height="44dp"
                            android:background="@drawable/curves"
                            android:gravity="center"
                            android:ems="10"
                            android:hint="Twitter"
                            android:paddingEnd="30dp"
                            android:drawableLeft="@drawable/tt2"
                            android:layout_marginTop="18dp"
                            android:padding="8dp"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtTeléfono"
                            android:layout_width="260dp"
                            android:layout_height="44dp"
                            android:background="@drawable/curves"
                            android:gravity="center"
                            android:ems="10"
                            android:text="000-000-0000"
                            android:padding="8dp"
                            android:paddingEnd="30dp"
                            android:maxLength="12"
                            android:drawableLeft="@drawable/telefono"
                            android:layout_marginTop="18dp"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>