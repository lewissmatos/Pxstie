<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InteresesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/naranja"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lyPrin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@color/naranja"
                android:background="@drawable/layout_principal_curvasabajo"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/registrarse"
                    android:drawableLeft="@drawable/add_circle"
                    android:drawablePadding="-110dp"
                    android:paddingLeft="80dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_curverightsuperior"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="3"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="18sp"
                android:backgroundTint="@color/naranja"
                android:background="@drawable/btn_circulo">
            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                app:cardElevation="3dp"
                android:layout_gravity="center"
                app:cardCornerRadius="30dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <TextView
                        android:id="@+id/encabezado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intereses"
                        android:textStyle="bold"
                        android:textColor="@color/gris_tabla"
                        android:textSize="24sp" />
                    <TextView
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:text="En busca de:"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:layout_marginStart="4sp"
                        android:textStyle="bold"
                        android:textColor="#3C3C3C"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                        <RadioButton
                            android:id="@+id/rbMas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:textColor="@color/azul"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            >
                        </RadioButton>
                        <RadioButton
                            android:id="@+id/rbFem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/rose"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            >
                        </RadioButton>
                        <EditText
                            android:id="@+id/edBusca"
                            android:layout_width="136dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:layout_marginLeft="24dp"
                            android:inputType="text"
                            android:background="@drawable/curves"
                            android:hint="Otro (especificar)"
                            android:padding="2dp"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edMusica"
                        android:layout_width="260dp"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="@drawable/curves"
                        android:hint="GÃ©neros musicales"
                        android:padding="8dp"
                        android:paddingEnd="30dp"
                        android:drawableLeft="@drawable/musica"                        android:layout_marginTop="18dp"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/edHobbies"
                        android:layout_width="260dp"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="@drawable/curves"
                        android:hint="Hobbies"
                        android:padding="8dp"
                        android:paddingEnd="30dp"
                        android:drawableLeft="@drawable/topics_2"                        android:layout_marginTop="18dp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edCreencias"
                        android:layout_width="260dp"
                        android:layout_height="44dp"
                        android:background="@drawable/curves"
                        android:gravity="center"
                        android:ems="10"
                        android:hint="Creencias (opcional)"
                        android:padding="8dp"
                        android:paddingEnd="30dp"
                        android:drawableLeft="@drawable/creencias"                        android:layout_marginTop="18dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        >

                        <Button
                            android:id="@+id/btnAnte"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:background="@drawable/button_rouned"
                            android:backgroundTint="@color/verde"
                            android:text="Anterior"
                            android:paddingEnd="10dp"
                            android:drawableLeft="@drawable/anterior"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btnSig"
                            android:layout_width="120dp"
                            android:layout_height="44dp"
                            android:background="@drawable/button_rouned"
                            android:backgroundTint="@color/naranja"
                            android:text="Siguiente"
                            android:paddingStart="10dp"
                            android:layout_marginStart="20dp"
                            android:drawableRight="@drawable/siguiente"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="278dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4A4A4A"
                    android:paddingStart="6dp"
                    android:textSize="16sp"
                    android:text="@string/tiene_cuenta">
                </TextView>

                <TextView
                    android:id="@+id/iniSes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rose"
                    android:paddingStart="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/iniciar_sesion">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>