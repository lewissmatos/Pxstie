<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MensajesFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rose"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/rose"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mensajes"
                android:textStyle="bold"
                android:textColor="@color/light_texts_color"
                android:textSize="34sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:backgroundTint="@color/white_smoke"
            android:background="@drawable/backgroung_home_activity"
            android:gravity="center_horizontal"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/msj1"
                android:layout_width="334dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/rltLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_texts_color">

                    <ImageView
                        android:id="@+id/imgmg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/yo" />

                    <LinearLayout
                        android:layout_width="265dp"
                        android:layout_height="92dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@id/imgmg"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tittle"
                            style="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Titulo"
                            android:textStyle="bold"
                            android:textColor="@color/nocturne"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/puntuacion"
                            style="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@id/imgmg"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="0000"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/nocturne"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>